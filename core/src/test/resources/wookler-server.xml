<?xml version="1.0" encoding="UTF-8"?>
<wookler>
	<env>
		<work directory="/tmp/wookler/work/" />
		<temp directory="/tmp/wookler/temp/" />
	</env>
	<server port="8090" numhtreads="5">
		<web directory="/tmp/wookler/work/web" />
	</server>
	<core>
		<datamanager>
			<persistence>
				<persister name="CSVPERSISTER"
					class="com.wookler.core.persistence.csv.CSVPersister">
					<params>
						<param type="Value" name="key" value="CSVPERSISTER" />
						<param type="Value" name="datadir" value="/var/wookler/data/" />
					</params>
				</persister>
				<!-- 
				<persister name="H2PERSISTER"
					class="com.wookler.core.persistence.db.H2DbPersister">
					<params>
						<param type="Value" name="key" value="H2PERSISTER" />
						<param type="Value" name="url" value="jdbc:h2:/var/wookler/data/h2/wookler" />
						<param type="Value" name="poolsize" value="20" />
						<param type="Value" name="user" value="wookler" />
						<param type="Value" name="password" value="w00kler" />
						<param type="Value" name="setup"
							value="/var/wookler/config/h2/h2-db-setup.xml" />
					</params>
				</persister>
				 -->
				<classmap class="com.wookler.core.persistence.AbstractEntity"
					persister="CSVPERSISTER" />
			</persistence>
		</datamanager>
	</core>
</wookler>